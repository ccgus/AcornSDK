function main(image, doc, layer) {
    
    // selectedLayers is a private api, and might change in a future release.
    var layers = doc.selectedLayers();
    
    var idx = 0;
    while (idx < layers.count()) {
        var layer = layers[idx];
        
        layer.setVisible(!layer.visible());
        
        idx++;
    }
    
    
    
    
}

