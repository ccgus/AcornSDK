ACTextGraphic = 4;

function main(image,doc,layer) {
    
    var g = [layer selectedGraphic]
    
    if ([g graphicType] != ACTextGraphic) {
        return;
    }
    
    var s = [[g contents] string];
    
    [g setHTMLString:s];
}