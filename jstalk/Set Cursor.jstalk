/*
This is a plugin to take the current document and set the cursor to it.

To install, put this file in you ~/Library/Application Support/Acorn/Plug-Ins/. folder, and restart Acorn.
*/

function main(image) {
    
    var doc = [[[NSApplication sharedApplication] orderedDocuments] objectAtIndex:0];
    var image = [[[NSImage alloc] initWithData:[doc dataRepresentationOfType:"public.png"]] autorelease];
    
    var cursor = [[NSCursor alloc] initWithImage:image hotSpot:NSMakePoint(0, 0)];
    
    [cursor push];
    
}